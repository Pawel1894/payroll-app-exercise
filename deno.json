{
  "tasks": {
    "dev": "deno run --watch ./src/app.ts",
    "test": "deno test"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "always",
    "include": ["src/"]    
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "ban-import-types"
      ],
      "exclude": ["no-unused-vars"]
    }
  }
}